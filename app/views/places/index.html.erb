
 <div>
 <h1  class="mb-3">Places</h1>


<ul>
  <% for place in @places %>
    <li  class="mb-1"><a href="/places/<%= place["id"] %>"><%= place["name"] %></a></li>
  <% end %>
</ul>

<% @user = User.find_by({ "id" => session["user_id"] }) %>
  <div class="row">
    <div class="col-12 mb-3">
      <a class="btn btn-primary" href="/places/new" role="button">New place</a>
    </div>
  </div>
  
  <% if @user == nil %>
    <div class="row">
      <div class="col-auto pr-1">
        <a class="btn btn-secondary" href="/login" role="button">Login</a>
      </div>
      <div class="col-auto pl-1">
        <a class="btn btn-secondary" href="/users/new" role="button">Sign up</a>
      </div>
    </div>
  <% end %>
</div>
